<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <!-- interface-requires gtk+ 3.0 -->
    <object class="GtkWindow" id="main_window">
        <property name="title">tnote</property>
        <property name="default_width">600</property>
        <property name="default_height">700</property>
        <child>
            <object class="GtkPaned" id="main_window_paned">
                <property name="position">200</property>
                <child>
                    <object class="GtkFrame" id="frame1">
                        <property name="shadow-type">in</property>
                        <child>
                            <object class="GtkBox" id="box1">
                                <property name="orientation">vertical</property>
                                <child>
                                    <object class="GtkToolbar" id="toolbar">
                                        <property name="toolbar_style">icons</property>
                                        <child>
                                            <object class="GtkToolButton" id="toolbar_sync">
                                                <property name="tooltip_text">Sync local notes to central repository.</property>
                                                <property name="stock_id">gtk-refresh</property>
                                                <accelerator key="s" signal="clicked" modifiers="GDK_CONTROL_MASK"/>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToolButton" id="toolbar_preferences">
                                                <property name="tooltip_text">Open the preferences dialog.</property>
                                                <property name="stock_id">gtk-preferences</property>
                                                <accelerator key="p" signal="clicked" modifiers="GDK_CONTROL_MASK"/>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkNotebook" id="tabs">
                                        <child>
                                            <object class="GtkLabel" id="a">
                                                <property name="label">Main</property>
                                            </object>
                                        </child>
                                        <child type="tab">
                                            <object class="GtkLabel" id="label1">
                                                <property name="label">Main</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkLabel" id="b">
                                                <property name="label">Tags</property>
                                            </object>
                                        </child>
                                        <child type="tab">
                                            <object class="GtkLabel" id="label2">
                                                <property name="label">Tags</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkLabel" id="c">
                                                <property name="label">Search</property>
                                            </object>
                                        </child>
                                        <child type="tab">
                                            <object class="GtkLabel" id="label3">
                                                <property name="label">Search</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkScrolledWindow" id="scrolled_window">
                        <child>
                            <object class="GtkViewport" id="viewport1">
                                <child>
                                    <object class="GtkFrame" id="frame2">
                                        <property name="shadow-type">in</property>
                                        <child>
                                            <object class="GtkBox" id="note_box">
                                                <property name="orientation">vertical</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>
